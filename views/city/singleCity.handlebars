<!-- Bar -->
<div class="container">
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/city/">All Cities</a></li>
        <li><a href="/city/{{cityItem.city.name}}">City</a></li>
    </ol>
</div>
<!-- //Bar -->
<!-- Main -->
<div class="about">
    <div class="about-heading">
        <div class="container">
            <h2 class="wow fadeInDown animated" data-wow-delay=".5s">{{cityItem.city.name}}</h2>
            <h3 class="wow fadeInUp animated" data-wow-delay=".5s">{{cityItem.city.name}}, {{cityItem.city.province}}, China</h3>
        </div>
    </div>
    <div class="about-top">
        <div class="container">
            <div class="about-bottom">
                <img class="wow fadeInUp animated" data-wow-delay=".5s" src="../..{{cityItem.city.image.path}}" alt="" />
                <br>
                <br>
                <br>
                <ul class="wow fadeInUp animated" data-wow-delay=".5s">
                    <li> Description: {{cityItem.city.description}} </li>
                    <li> Traffic: {{cityItem.city.traffic}} </li>
                    <li> Weather: {{cityItem.city.weather}} </li>
                    <li> History: {{cityItem.city.history}} </li>
                    <li> Culture: {{cityItem.city.culture}} </li>
                    <li> Currency: {{cityItem.city.currency}} </li>
                </ul>
            </div>
        </div>
    </div>
    
    <!-- Sites -->
    {{#if cityItem.site.length}}
    <ul>
    <div class="team">
        <div class="container">
            <div class="popular-heading team-heading">
                <h3 class="wow fadeInUp animated" data-wow-delay=".5s">Sites in {{cityItem.city.name}}</h3>
                <h2 class="wow fadeInUp animated" data-wow-delay=".5s">Welcome to {{cityItem.city.name}}</h2>
            </div>
            {{#each cityItem.site}}
            <div class="col-md-4 team-grid wow fadeInLeft animated" data-wow-delay=".5s">
                <img src="../..{{this.image.path}}" alt="" />
                <h4><a href="/site/siteId/{{this._id}}">{{this.name}}</a></h4>
                <p>{{this.address}}</p>
            </div>
            {{/each}}
        </div>
    </div>
    </ul>
    {{/if}}
    <!-- //Sites -->
    <br>
    <br>
    <br>
    <!-- Food -->
    {{#if cityItem.food.length}}
    <ul>
    <div class="team">
        <div class="container">
            <div class="popular-heading team-heading">
                <h3 class="wow fadeInUp animated" data-wow-delay=".5s">Food in {{cityItem.city.name}}</h3>
                <h2 class="wow fadeInUp animated" data-wow-delay=".5s">Welcome to {{cityItem.city.name}}</h2>
            </div>
            {{#each cityItem.food}}
            <div class="col-md-4 team-grid wow fadeInLeft animated" data-wow-delay=".5s">
                    <img src="../..{{this.image.path}}" alt="" />
                    <h4><a href="/food/foodId/{{this._id}}">{{this.name}}</a></h4>
                    <p>{{this.address}}</p>
            </div>
            {{/each}}
        </div>
    </ul>
    </div>
    {{/if}}
    <!-- //Food -->
    <br>
    <br>
    <!-- Comments -->
    <div class="response wow fadeInUp animated" data-wow-delay=".5s">
        <div class="container">
            <h3>Comments</h3>
            <div class="media response-info">
                {{#each siteComments}}
                    <div class="media-left response-text-left">
                        <img class="media-object" src="../../public/images/user.png" alt="Figure" style="width:50px; height:50px;">
                        <h5>{{userId}}</h5>
                    </div>

                    <div class="media-body response-text-right">
                        <p class="well">{{content}}</p>
                        <ul>
                            <li>{{createTime}}</li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                {{/each}}
            </div>
        </div>
        <div class="opinion">
            <div class="container">
                <h2 class="wow fadeInUp animated" data-wow-delay=".5s">Leave Your Comment</h2>
                <form>
                    <input class="wow fadeInLeft animated" data-wow-delay=".5s" type="text" placeholder="Name" required="">
                    <textarea class="wow fadeInLeft animated" data-wow-delay=".5s" placeholder="Message" required=""></textarea>
                    <input class="wow fadeInRight animated" data-wow-delay=".5s" type="submit" value="SEND">
                </form>
            </div>
        </div>
    </div>
    <!-- //Comments -->
</div>
<!-- // Main -->
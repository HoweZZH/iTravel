<div class="container">
    <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/city/id/{{site.cityId}}">{{city.name}}</a></li>
            <li class="active">{{site.name}}</li>
    </ol>
</div>

<div class="about">
    <div class="about-heading">
        <div class="container">
            <h2 class="wow fadeInDown animated" data-wow-delay=".5s">{{site.name}}</h2>

            <div class="bs-docs-example wow fadeInUp animated" data-wow-delay=".5s">
                <h3>
                    <span class="label label-primary">{{site.tag.[0]}}</span>
                    <span class="label label-success">{{site.tag.[1]}}</span>
                    <span class="label label-warning">{{site.tag.[2]}}</span>
                </h3>
            </div>

            <p class="wow fadeInUp animated" data-wow-delay=".5s">{{site.description}}</p>
        </div>
    </div>

    <div class="about-top">
        <div class="container">
            <div class="about-bottom">
                <div class="col-md-6 gallery-grid wow fadeInUp animated" data-wow-delay=".5s">
                    <div class="grid">
                        <figure class="effect-apollo">
                            <a class="example-image-link" href="../..{{siteMainImage.path}}" data-lightbox="example-set" data-title="">
                                <img src="../..{{siteMainImage.path}}" alt="Main Image" style="height:400px;"/>
                                <figcaption>
                                    <h3>Beijing</h3>
                                    <p>Posted by the Admin</p>
                                </figcaption>   
                            </a>
                        </figure>
                    </div>
                </div>

                <div>
                    <p>Address:<span>{{site.address}}</span></p>
                    <p>Location:</p>
                    <p id="map"></p>
                    <script>
                      function initMap() {
                        var uluru = {lat: {{site.locationlat}}, lng: {{site.locationlnt}} };
                        var map = new google.maps.Map(document.getElementById('map'), {
                          zoom: 4,
                          center: uluru
                        });
                        var marker = new google.maps.Marker({
                          position: uluru,
                          map: map
                        });
                      }
                    </script>
                    <script async defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDeLcZ63IBMrSqJlZ2umjdSnfi7AfwHirw&callback=initMap">
                    </script>
                </div>
            </div>
        </div>
    </div>

    <div class="bs-docs-example wow fadeInUp animated" data-wow-delay=".5s">
        <div class="container">    
            <table>
                <tbody>
                    <tr>
                        <td>Commute: </td>
                        <td>{{site.commute}}</td>
                    </tr>
                    <tr>
                        <td>Price: </td>
                        <td>{{site.price}}</td>
                    </tr>
                    <tr>
                        <td>ClosingTime: </td>
                        <td>{{site.closingTime}}</td>
                    </tr>
                    <tr>
                        <td>Phone: </td>
                        <td>{{site.phone}}</td>
                    </tr>
                    <tr>
                        <td>Website: </td>
                        <td><a href="{{site.website}}">{{site.website}}</a></td>
                    </tr>
                </tbody>
            </table>
        </div>    
    </div>

    <div class="bs-docs-example wow fadeInUp animated" data-wow-delay=".5s">
        <div class="container">
            <div class="alert alert-warning" role="alert">           
                <strong>Tips!</strong>
                <h5>{{site.tips}}</h5>
            </div>
        </div>
    </div>

    <div class="response wow fadeInUp animated" data-wow-delay=".5s">
        <div class="container">
            <h3>Comments</h3>
            <div id="commentContainer" class="media response-info">
                {{#each siteComments}}
                    <div class="media-left response-text-left">
                        <img class="media-object" src="../../public/images/user.png" alt="Figure" style="width:50px; height:50px;">
                        <h5>{{userId}}</h5>
                    </div>

                    <div class="media-body response-text-right">
                        <p class="well">{{content}}</p>
                        <ul>
                            <li>{{createTime}}</li>
                        </ul>
                    </div>

                    <div class="clearfix"> </div>
                {{/each}}
            </div>
        </div>
        
        <div class="opinion">
            <div class="container">
                <h2 class="wow fadeInUp animated" data-wow-delay=".5s">Leave Your Comment</h2>

                <div id="idHidden">
                    {{site._id}}
                </div>

                <form id="comment-Form">
                    <textarea id="siteComment" class="wow fadeInLeft animated" data-wow-delay=".5s" placeholder="Message" required=""></textarea>
                    <input class="wow fadeInRight animated" data-wow-delay=".5s" type="submit" value="Submit">
                </form>

                <div class="alert alert-danger hidden" id="form-alert">
                </div>
            </div>
        </div>
    </div>
    <script src="../../public/js/site.js"></script>
</div>